WindowManager:
    Login:
    Homepage:
    CreateAccount:

<FloatLay>:
    canvas:
        Rectangle:
            pos: self.pos
            size: self.size
            source:"background.jpg"
<GridLay>:
    canvas:
        Color:
            rgba: 0.3843, 0.7019, 0.8745, 1
        Rectangle:
            pos: self.pos
            size: self.size
<Img>:
    allow_stretch: True
    keep_ratio: True



<Login>:
    name: "login"

    usernameIn: usernameIn
    passwordIn: passwordIn

    FloatLay:
        Img:
            source:"Inno.png"
            size_hint: 0.33,0.33
            pos_hint: {"center_x":0.5,"top":0.99}
            
        Label:
            text:"Username:"
            font_size: (20)
            pos_hint: {"x":0.1, "top":0.65}
            size_hint: 0.35, 0.07

        Label:
            text:"Password:"
            font_size: (20)
            pos_hint: {"x":0.1, "top":0.55}
            size_hint: 0.35,0.07

        TextInput:
            id: usernameIn
            font_size: (20) 
            pos_hint: {"x": 0.45 , "top":0.65}
            size_hint: 0.4, 0.07
            multiline: False
            
        TextInput:
            id: passwordIn
            font_size: (20)
            pos_hint: {"x": 0.45, "top":0.55}
            size_hint: 0.4, 0.07
            multiline: False
            password: True
            
        Button:
            text: "Login"
            font_size: (20)
            pos_hint:{"x":0.2,"y":0.05}
            size_hint: 0.6, 0.2

            on_release:
                root.login()
                root.manager.transition.direction = "left"

        Button:
            text: "Create Account"
            font_size: (12)
            pos_hint:{"x":0.3,"y":0.3}
            size_hint: 0.4, 0.1

            on_release:
                root.manager.transition.direction = "left"
                root.createAcct()



<Homepage>:
    
    name: "homepage"

    searchPhraseIn: searchPhrase

    FloatLay:
        TextInput:
            id: searchPhrase
            font_size: 20
            pos_hint: {"x": 0.05, "top":0.98}
            size_hint: .8, 0.07
            multiline: False

        ImgButton:
            source: "search2.png"
            pos_hint: {"right":0.97,"y":0.89}   
            size_hint: 0.1,0.1

            on_release: 
                root.search()
                root.manager.transition.direction = "up"
                
        GridLayout:
            cols:1
            size_hint:1,.87
      
            GridLayout:
                cols:2

                Button:
                    text: "Plants"
                    on_release:
                        category = 0
                        root.catSearch(category)
                Button:
                    text: "Football"
                    on_release:
                        category = 1
                        root.catSearch(category)
                Button:
                    text: "Users"
                    on_release:
                        category = 2
                        root.catSearch(category)
                Button:
                    text: "Medical"
                    on_release:
                        category = 3
                        root.catSearch(category)
                Button:
                    text: "Grocery"
                    on_release:
                        category = 4
                        root.catSearch(category)
                Button:
                    text: "Vehicles"
                    on_release:
                        category = 5
                        root.catSearch(category)
                    

<CreateAccount>:

    name: "createAcct"

    usernameIn: usernameIn
    passwordIn: passwordIn

    FloatLay:
        Img:
            source:"Inno.png"
            size_hint: 0.33,0.33
            pos_hint: {"center_x":0.5,"top":0.99}

        Label:
            text:"Username:"
            font_size: (20)
            pos_hint: {"x":0.1, "top":0.65}
            size_hint: 0.35, 0.07

        Label:
            text:"Password:"
            font_size: (20)
            pos_hint: {"x":0.1, "top":0.55}
            size_hint: 0.35,0.07

        TextInput:
            id: usernameIn
            font_size: (20) 
            pos_hint: {"x": 0.45 , "top":0.65}
            size_hint: 0.4, 0.07
            multiline: False
            
        TextInput:
            id: passwordIn
            font_size: (20)
            pos_hint: {"x": 0.45, "top":0.55}
            size_hint: 0.4, 0.07
            multiline: False
            password: True

        Button:
            text: "Create Account"
            font_size: (12)
            pos_hint:{"x":0.3,"y":0.3}
            size_hint: 0.4, 0.1

            on_release:
                root.manager.transition.direction = "left"
                root.createAccount()

        Button:
            text: "Back"
            font_size: (20)
            pos_hint:{"x":0.45,"y":0.15}
            size_hint: 0.1, 0.1

            on_release:
                root.manager.transition.direction = "right"
                root.manager.current = "login"

        